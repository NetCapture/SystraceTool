<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <stroke android:width="2dp" android:color="#AA444444" />
            <solid android:color="#FF444444"/>
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <stroke android:width="2dp" android:color="#AA6B96C2" />
            <solid android:color="@color/btn_gb_press" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <stroke android:width="2dp" android:color="#aa34495e" />
            <solid android:color="@color/btn_gb" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>